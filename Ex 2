Var 1

#include <stdio.h>
#include <stdlib.h>

int main()
{
char bez[100];
int i=0;
fgets(bez,100,stdin);
while(bez[i]){
i++;
};
printf ("Lungimea sirului este: %d \n", i-1);
    return 0;
}

Var 2 

#include <stdio.h>
#include <stdlib.h>

int main()
{
char bez[100];
int i=0;
scanf("%[^\n]",bez);
while(bez[i]){
i++;
};
printf ("Lungimea sirului este: %d \n", i);
    return 0;
}
